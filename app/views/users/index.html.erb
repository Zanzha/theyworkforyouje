<p id="notice"><%= notice %></p>

<h1> User Management </h1>
<br>
  <%= link_to 'Return to Admin Panel', admin_panel_path%>
</br>
<div class="table-responsive">
  <table class="table table-hover">
    <tr>
      <th> Username </th>
      <th> Email </th>
      <th> Role </th>
      <th> Last Logged in </th>
      <th> Date Created </th>
      <th> Created By <th>
        <th></th>
        <th></th>
    </tr>
    <% @users.each do |user| %>
  <tr>
    <td><%= user.username %> </td>
    <td><%= user.email %> </td>
    <td> <%= user.role.name %> </td>
    <td> <%= user.last_sign_in_at.strftime("%d %b. %Y") %> </td>
    <td><%= user.created_at.strftime("%d %b. %Y") %> </td>
    <td><%= user.created_by %></td>
    <td><%=link_to "View User",  user %></td>
    <td><%= link_to 'Edit User', edit_user_path(user)%></td>
    <td>  <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }%></td>
  </tr>
  <%end%>
  </table>
</div>
