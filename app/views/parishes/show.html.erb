<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @parish.name %>
</p>

<div class="manage_container">
  <% if current_user.blank? %>
    <%else %>
      <%if current_user.role_id == 1%>

          <div class="manage_button"><%= link_to 'Edit', edit_parish_path(@parish %></div>
          <div class="manage_button"><%= link_to 'Delete', @parish, method: :delete, data: { confirm: 'Are you sure?' } %></div>


        <% end %>
  <% end %>
  <div class="manage_button"><%= link_to 'Back', parishes_path %></div>
</div>
