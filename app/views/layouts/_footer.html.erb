<%= stylesheet_link_tag 'footer', media: 'all', 'data-turbolinks-track': 'reload' %>
<% @year = Time.new.year %>

<footer class="navbar nav_footer">
  <div></div>

  <span class="navbar-text">
    <div class="logo_footer">
      <%= @title %>
      &copy;
      <%= @year %>
    </div>
    <div>
      <%= link_to "Privacy Policy", privacy_path, class: "container static" %>
      <%= link_to "Terms and Conditions", termsandconditions_path, class: "container static" %>
    </div>
  </span>

<div>

<% if user_signed_in? %>
<%=link_to "Log Out", destroy_user_session_path%>
<%else%>
<%=link_to "Sign In", new_user_session_path%>
<%end%>
<br>
<%  if user_signed_in? && current_user.role.name == "Admin"%>
<%=link_to "Admin Panel", admin_panel_path %>
<%end%>
</div>

</footer>
