<!DOCTYPE html>
<html>
  <head>
    <title>They Work For You JE</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>    
    <% if Rails.env.production? %>
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-110730077-1"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-110730077-1');
      </script>
    <% end %>
  </head>

  <body>

    <%= render partial: "layouts/nav" %>

      <div class="container-fluid">

        <% if (notice) %><p class="bg-success"><%= notice %></p><% end %>
        <% if (alert) %><p class="bg-warning"><%= alert %></p><% end %>

        <%= yield %>

      </div>

    <%= render partial: "layouts/footer" %>

  

  </body>
</html>